<h1>Listing Doctors</h1>
<br> <br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Doctor Name</th>
      <th>License no</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Patients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.d_full_name %></td>
        <td><%= doctor.license_no %></td>
        <td><%= doctor.email %></td>
        <td><%= number_to_phone(doctor.phone_number) %></td>
        <td>
          <% doctor.patients.each do |patient| %>
          <%= patient_format(patient) %>
          <br>
          <%end%>
          </td>
          
        <td><%= link_to 'Show', doctor, class:"btn btn-primary btn-lg active" %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class:"btn btn-warning btn-lg active" %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, class:"btn btn-danger btn-lg active",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path, class:"btn btn-success btn btn-primary btn-lg btn-lg active" %>
